<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SettingItem">
        <attr name="customHeight" format="dimension" />
        <!-- 表单项的类型，会影响背景selector -->
        <attr name="bgType">
            <flag name="none" value="0" />
            <flag name="single" value="1" />
            <flag name="top" value="2" />
            <flag name="middle" value="3" />
            <flag name="bottom" value="4" />
        </attr>
        <attr name="leftText" format="string" />
        <attr name="leftIcon" format="reference" />
        <attr name="leftIconWidth" format="dimension" />
        <attr name="leftIconHeight" format="dimension" />
        <attr name="rightText" format="string" />
        <attr name="rightIcon" format="reference" />
        <attr name="rightIconWidth" format="dimension" />
        <attr name="rightIconHeight" format="dimension" />
        <attr name="rightTextLeftPadding" format="dimension" />

        <!-- 是否显示右边的箭头 -->
        <attr name="showArrow" format="boolean" />

        <!-- 以下属性是FormSwitchItem使用的 -->
        <attr name="switchText" format="string" />
        <attr name="switchChecked" format="boolean" />
    </declare-styleable>

    <attr name="switchStyle" format="reference" />

    <declare-styleable name="Switch">
        <attr name="thumb" format="reference" />
        <attr name="track_on" format="reference" />
        <attr name="track_off" format="reference" />
        <attr name="textOn" format="string" />
        <attr name="textOff" format="string" />
        <attr name="thumbTextPadding" format="dimension" />
        <attr name="switchTextAppearance" format="reference" />
        <attr name="switchMinWidth" format="dimension" />
        <attr name="switchPadding" format="dimension" />
    </declare-styleable>

    <attr name="textAppearance" format="reference" />

    <declare-styleable name="TextAppearanceSwitch">
        <attr name="switch_textColor" format="color" />
        <attr name="switch_textSize" format="dimension" />
        <attr name="textStyle" format="reference" />
        <attr name="typeface" format="reference" />
        <attr name="fontFamily" format="reference" />
        <attr name="textColorHighlight" format="color" />
        <attr name="textColorHint" format="color" />
        <attr name="textColorLink" format="color" />
        <attr name="switch_textAllCaps" format="boolean" />
    </declare-styleable>

</resources>